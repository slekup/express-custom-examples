{
  "name": "typescript-esm",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**/*.ts --ext .ts",
    "lint:fix": "eslint --fix src/**/*.ts --ext .ts",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc --build --verbose",
    "cp:config": "copyfiles -u 1 ./config/**/*.yaml ./dist/config",
    "cp:constants": "copyfiles -u 1 ./src/constants/**/*.* ./dist/src",
    "cp:env": "cp .env ./dist/.env",
    "cp": "npm run cp:config && npm run cp:constants && npm run cp:env",
    "start": "npm run build && npm run cp && cd dist && node -r src/register.cjs src/cluster.js",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts --loader ts-node/esm",
    "dev:new": "ts-node-dev -r tsconfig-paths/register src/index.ts"
  },
  "keywords": [],
  "author": "slekup",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.4.0",
    "body-parser": "^1.20.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.8",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/hpp": "^0.2.2",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "copyfiles": "^2.4.1",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^46.2.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  }
}
